#!/usr/bin/env bash
set -o errexit

here="$(cd -- "$(dirname -- "${BASH_SOURCE[0]:-}")" &>/dev/null && pwd 2>/dev/null)"

outputFolder=$(realpath "$here/../dist/fs")

if [[ -d $outputFolder ]]; then
  rm -rf "$outputFolder"
fi

bash "$here/build" --output "$outputFolder"
du --human-readable --summarize "$outputFolder"
