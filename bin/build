#!/usr/bin/env bash
set -o errexit

here="$(cd -- "$(dirname -- "${BASH_SOURCE[0]:-}")" &>/dev/null && pwd 2>/dev/null)"

distFolder="$here/../dist"
imageName="$("$here/imageName")"
mkdir --parents "$distFolder"
docker build --tag "$imageName" --progress plain "$here/../src" "$@" |& tee "$distFolder/build.log"
